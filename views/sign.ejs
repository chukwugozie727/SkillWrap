<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #1f2735, #2c3a50, #2c5364);
            padding: 20px;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(18px);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.15);
            animation: fadeIn 0.7s ease forwards;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .form-container h1 {
            text-align: center;
            color: #fff;
            margin-bottom: 25px;
            font-weight: 700;
            font-size: 1.8rem;
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }

        .input-group label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            font-weight: 600;
            color: #fff;
        }

        .input-group input {
            width: 100%;
            padding: 12px 42px 12px 14px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            outline: none;
            background: rgba(255, 255, 255, 0.15);
            color: #fff;
            font-size: 15px;
            transition: all 0.3s ease;
        }

        .input-group input:focus {
            border-color: #667eea;
            background: rgba(255, 255, 255, 0.25);
            box-shadow: 0 0 0 3px rgba(102,126,234,0.3);
        }

        .input-group input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }
        
        /* Invalid input style */
        .input-group input.invalid {
            border-color: #ff8080;
            box-shadow: 0 0 0 3px rgba(255, 128, 128, 0.3);
        }
        
        /* Eye icon styles */
        .input-group i {
            position: absolute;
            top: 50%;
            right: 14px;
            transform: translateY(-50%);
            cursor: pointer;
            color: rgba(255, 255, 255, 0.8);
            font-size: 20px;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        .input-group i:hover {
            color: #ffd700;
            transform: translateY(-50%) scale(1.1);
        }

        .input-group i:active {
            transform: translateY(-50%) scale(0.95);
        }

        .error-msg {
            font-size: 12px;
            color: #ff8080;
            margin-top: 6px;
            display: none;
        }

        .btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea, #4a5fc1);
            border: none;
            border-radius: 12px;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.25s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn:hover:not(:disabled) {
            transform: scale(1.03);
            background: linear-gradient(135deg, #5a6ee0, #3a4fb0);
        }

        .btn:disabled {
            background: #4a5568;
            cursor: not-allowed;
            opacity: 0.7;
        }

        .or-separator {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 25px 0;
            font-size: 14px;
            color: rgba(255, 255, 255, 0.7);
        }
        .or-separator::before,
        .or-separator::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }
        .or-separator:not(:empty)::before { margin-right: 1em; }
        .or-separator:not(:empty)::after { margin-left: 1em; }

        .social-login {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .social-btn {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
            color: #fff;
        }

        .social-btn:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .google-btn { background-color: #4285F4; }
        .github-btn { background-color: #333; }
        
        .social-btn i {
            font-size: 20px;
        }

        .register-link {
            margin-top: 25px;
            text-align: center;
            font-size: 14px;
            color: #fff;
        }

        .register-link a {
            color: #ffd700;
            text-decoration: none;
            font-weight: 600;
        }

        .register-link a:hover { text-decoration: underline; }

        @media (max-width: 480px) {
            .form-container {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <form id="signupForm" action="/signup" method="post" novalidate>
            <h1>Sign Up Today</h1>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <p style="color: #ffcccc; text-align: center; margin-bottom: 15px;"><%= error %></p>
            <% } %>

            <div class="input-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Choose a username" required>
                <p class="error-msg">Username is required</p>
            </div>

            <div class="input-group">
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" placeholder="Enter your full name" required>
                <p class="error-msg">Full name is required</p>
            </div>

            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
                <p class="error-msg">Enter a valid email address</p>
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Create a password" required minlength="6">
                <i class='bx bx-hide' id="togglePassword"></i>
                <p class="error-msg">Password must be at least 6 characters</p>
            </div>

            <button type="submit" class="btn" id="signupBtn">Sign Up</button>
            
            <div class="or-separator">or</div>
            
            <div class="social-login">
                <button type="button" class="social-btn google-btn" data-auth-provider="/auth/google">
                    <i class='bx bxl-google'></i> Sign up with Google
                </button>
                <button type="button" class="social-btn github-btn" data-auth-provider="/auth/github">
                    <i class='bx bxl-github'></i> Sign up with GitHub
                </button>
            </div>

            <div class="register-link">
                <p>Already have an account? <a href="/login">Login</a></p>
            </div>
        </form>
    </div>


     <img src="'https://lh3.googleusercontent.com/a/ACg8ocLTWASZyfnP2BPXCTjfRMAXTk-Uap8TPldHwB5AvvLNolhHJ_Q=s96-c" alt="huuhu">

    <script>
        const passwordInput = document.getElementById('password');
        const togglePassword = document.getElementById('togglePassword');
        const signupBtn = document.getElementById('signupBtn');
        const signupForm = document.getElementById('signupForm');
        const socialButtons = document.querySelectorAll('.social-btn');

        // Password toggle
        togglePassword.addEventListener('click', function () {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            if (type === 'password') {
                this.classList.remove('bx-show');
                this.classList.add('bx-hide');
            } else {
                this.classList.remove('bx-hide');
                this.classList.add('bx-show');
            }
        });

        // Real-time validation for required fields
        const requiredInputs = signupForm.querySelectorAll('input[required]');
        requiredInputs.forEach(input => {
            input.addEventListener('input', () => validateInput(input));
            input.addEventListener('blur', () => validateInput(input));
        });

        function validateInput(input) {
            const errorMsg = input.nextElementSibling;
            if (input.checkValidity()) {
                errorMsg.style.display = 'none';
                input.classList.remove('invalid');
            } else {
                errorMsg.style.display = 'block';
                input.classList.add('invalid');
            }
        }

        // Form submission handling
        signupForm.addEventListener('submit', function(e) {
            let formIsValid = true;
            requiredInputs.forEach(input => {
                if (!input.checkValidity()) {
                    validateInput(input);
                    formIsValid = false;
                }
            });

            if (!formIsValid) {
                e.preventDefault();
            } else {
                signupBtn.textContent = 'Signing up...';
                signupBtn.disabled = true;
            }
        });

        // Social login redirect
        socialButtons.forEach(button => {
            button.addEventListener('click', function() {
                const url = this.getAttribute('data-auth-provider');
                if (url) {
                    window.location.href = url;
                }
            });
        });
    </script>
</body>
</html>
