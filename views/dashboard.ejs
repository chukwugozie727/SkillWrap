@media (max-width: 600px) {
  .dashboard-header {
    flex-direction: column;
    text-align: center;
    gap: 10px;
  }
  .stats-container {
    display: flex;
    gap: 15px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: 10px;
  }
  .stat-card {
    min-width: 180px;
    scroll-snap-align: start;
  }
}

   </style>
