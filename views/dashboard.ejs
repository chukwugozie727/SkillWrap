  --light-text: #6b7280;
  --dark-text: #111827;
  --card-bg: #ffffff;
  --radius: 14px;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

body {
  background: var(--bg);
  min-height: 100vh;
  display: flex;
  color: var(--dark-text);
  overflow-x: hidden;
}

/* Sidebar */
.sidebar {
  width: 250px;
  background: linear-gradient(180deg, #ffffff, #f8fafc);
  border-right: 1px solid #e5e7eb;
  padding: 20px;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0; left: 0;
  height: 100%;
  transition: transform 0.3s ease;
  z-index: 1000;
}
.sidebar h2 {
  text-align: center;
  margin-bottom: 40px;
  font-size: 1.4rem;
  font-weight: 700;
  color: var(--primary);
}
.sidebar a {
  display: flex;
  align-items: center;
  gap: 12px;
  text-decoration: none;
  color: var(--dark-text);
  padding: 14px;
  border-radius: var(--radius);
  font-weight: 500;
  transition: 0.3s;
}
.sidebar a:hover {
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  color: white;
  box-shadow: 0 4px 12px rgba(59,130,246,0.25);
}

/* Sidebar Toggle (mobile) */
.sidebar-toggle {
  display: none;
  position: fixed;
  top: 15px;
  left: 15px;
  background: var(--primary);
  color: white;
  border: none;
  padding: 10px;
  border-radius: 10px;
  z-index: 1100;
  cursor: pointer;
  font-size: 1.4rem;
}

/* Main */
.main {
  margin-left: 260px;
  padding: 30px;
  width: 100%;
  transition: margin-left 0.3s ease;
}
.dashboard-header {
  position: sticky;
  top: 0;
  z-index: 900;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
  background: var(--card-bg);
  padding: 15px 20px;
  border-radius: var(--radius);
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
}
.dashboard-header h1 {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--dark-text);
}

/* Profile */
.profile {
  position: relative;
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
}
.profile img, .avatar {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  border: 2px solid var(--primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  background: var(--bg);
  color: var(--primary);
}
.username {
  font-weight: 600;
  color: var(--dark-text);
}
.dropdown {
  position: absolute;
  top: 55px;
  right: 0;
  background: var(--card-bg);
  border-radius: var(--radius);
  box-shadow: 0 6px 18px rgba(0,0,0,0.1);
  display: none;
  flex-direction: column;
  min-width: 160px;
  z-index: 99;
}
.dropdown a {
  padding: 12px 20px;
  text-decoration: none;
  color: var(--dark-text);
  font-weight: 500;
  transition: 0.3s;
}
.dropdown a:hover {
  background: var(--bg);
  color: var(--primary);
}
.profile.active .dropdown { display: flex; }

/* Stats */
.stats-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin: 30px 0;
}
.stat-card {
  background: var(--card-bg);
  padding: 25px;
  border-radius: var(--radius);
  text-align: center;
  box-shadow: 0 3px 8px rgba(0,0,0,0.05);
  transition: 0.3s;
}
.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 16px rgba(59,130,246,0.25);
}
.stat-number {
  font-size: 2.2rem;
  font-weight: bold;
  margin-bottom: 6px;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  /* -webkit-background-clip: text; */
  -webkit-text-fill-color: transparent;
}
.stat-label {
  font-size: 0.95rem;
  color: var(--light-text);
}

/* Links */
.link-group {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
  justify-content: center;
  margin: 25px 0;
}
.link-group a {
  text-decoration: none;
  padding: 12px 22px;
  border-radius: 10px;
  font-weight: 600;
  font-size: 1rem;
  color: white;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  box-shadow: 0 3px 8px rgba(0,0,0,0.15);
  transition: all 0.3s ease;
}
.link-group a:hover {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  transform: translateY(-3px);
  box-shadow: 0 5px 12px rgba(0,0,0,0.2);
}

/* Responsive */
@media (max-width: 1024px) {
  .main {
    margin-left: 0;
    padding: 20px;
